<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.xuexiang.xui.widget.actionbar.TitleBar
                android:id="@+id/title_bar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/xui_config_color_titlebar"
                app:tb_actionPadding="20dp"
                app:tb_barHeight="65dp"
                app:tb_leftImageResource="@drawable/ic_navigation_menu"
                app:tb_sideTextPadding="20dp"
                app:tb_titleText="One工具箱" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextStyle.Content"
                    android:layout_margin="10dp"
                    android:text="实用：" />

                <com.xuexiang.xui.widget.flowlayout.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_h_weather"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="天气查询" />

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_h_qq"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="QQ信息查询" />


                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_h_ip"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="IP位置查询" />

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_h_tel"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="手机号归属地" />

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_h_email"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="匿名邮件" />

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_h_trash"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="垃圾分类" />

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_h_trans"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="在线翻译" />

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_h_appdown"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="APP杂货铺" />

                </com.xuexiang.xui.widget.flowlayout.FlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextStyle.Content"
                    android:layout_margin="10dp"
                    android:text="文字：" />

                <com.xuexiang.xui.widget.flowlayout.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_w_yiyan"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="一言" />

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_w_ncm"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="网易云热评" />

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_w_poet"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="今日古诗词" />

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_w_today"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="历史上的今天" />

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_w_baike"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="百科查询" />


                </com.xuexiang.xui.widget.flowlayout.FlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextStyle.Content"
                    android:layout_margin="10dp"
                    android:text="图片：" />

                <com.xuexiang.xui.widget.flowlayout.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_p_random"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="随机壁纸" />

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_p_bing"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="必应美图" />

                    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                        android:id="@+id/bt_p_meme"
                        style="@style/SuperButton.Blue"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="表情包搜索" />


                </com.xuexiang.xui.widget.flowlayout.FlowLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>